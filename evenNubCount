import java.util.Scanner;
class evenNubCount 
{
	public static void main(String[] args) 
	{
		int sum=0;
		int count=0;
		int temp=0;
		Scanner sc=new Scanner(System.in);
		int n=sc.nextInt();
		while(n>0)
		{
			temp=n%10;
			if(temp%2==0)
			{
				sum=sum+temp;
				count++;
			}
			n=n/10;
		}
		System.out.println(sum);
		System.out.println(count);
	}
}
